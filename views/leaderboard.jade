extends ./base.jade
block title
  title URFWin
block css
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.css")

block body
  div.container
    div.row
      h1(style="text-align:center") URF SoloKill LeaderBoard
    div.row.text-center
        div(style="display:table;margin:auto;").text-left
            h1.text-center Solo Fight Win Rate
            each val,i in winners
                div(style="border:.5px solid #222222")
                    - perc = Math.round(val.solo_perc*100)
                    div(style="display:inline-block;width:30px") #{i+1}.
                    div(style="display:inline-block")
                        img(src="http://ddragon.leagueoflegends.com/cdn/5.6.2/img/champion/"+val.champ+".png",width='30px',height='30px')
                    div(style="display:inline-block;width:100px;padding-left:1vw;")
                        = val.champ
                    div(style="display:inline-block;float:right;padding-right:1vw").text-right
                        = perc+"%"
block scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js")
